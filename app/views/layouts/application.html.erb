<!DOCTYPE html>
<html>
<head>
  <title><%= @page_title || "This is your Depot Store" %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
<div id="banner">
	<%= image_tag("logo.png") %>

</div>
<div id="columns">
	<div id="side">
	<% if @cart %>
	    <%= hidden_div_if(@cart.line_items.empty?, id:'cart') do %>
	      <%= render @cart %>
	    <% end %>
    <% end %>

    <ul>
			<li><%= link_to "Home", store_path %></li>
			<% if @cart and @cart.id%>
			<li><%= link_to "Cart", cart_path(id:@cart.id) %></li>
			<% end %>
		</ul>

	</div>
	<div id="main">
		<%= yield %>
	</div>
</div>

</body>
</html>
