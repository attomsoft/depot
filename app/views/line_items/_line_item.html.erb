<% if line_item == @current_item %>
<tr id="current_item" class="item_line">
<% else %>
<tr class="item_line">
<% end %>
  <td><%= line_item.quantity %>&times;</td>
  <td><%= line_item.product.title %></td>
  <td class="item_price">
  <%= number_to_currency(line_item.total_price) %>
  </td>
  <td>
  <%= button_to ' - ', remove_product_line_item_path(line_item.id), method: :post, remote: true %>
  </td>
</tr>
